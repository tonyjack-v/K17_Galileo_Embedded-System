<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginVertical="5dp"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.9"
            android:text="Connect device by: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_gravity="center"
            android:paddingHorizontal="25dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ln_mac_edit"
            android:visibility="visible"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/veri1"
                android:background="@drawable/bg_input"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/veri2"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twodot"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/veri2"
                android:background="@drawable/bg_input"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/veri3"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twodot"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/veri3"
                android:textAllCaps="true"
                android:padding="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/bg_input"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/veri4"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twodot"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/veri4"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/bg_input"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/veri5"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twodot"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/veri5"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/bg_input"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionNext"
                android:nextFocusForward="@id/veri6"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/twodot"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <EditText
                android:id="@+id/veri6"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="15dp"
                android:background="@drawable/bg_input"
                android:textColor="@color/colorbrown_900"
                android:gravity="center"
                android:maxLength="2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:inputType="textCapCharacters"
                android:imeOptions="actionDone"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_spinner_device"
            android:visibility="gone"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingVertical="5dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/getweb"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="get Web">
    </Button>
    <WebView
        android:id="@+id/webview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>