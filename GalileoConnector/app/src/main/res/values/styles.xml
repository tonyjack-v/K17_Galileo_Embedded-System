<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorshrinkpink</item>
        <item name="colorPrimaryDark">@color/colorshrinkpink</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorshrinkpink</item>
        <item name="colorPrimaryDark">@color/colorshrinkpink</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CustomTabStyle" parent = "TextAppearance.Design.Tab">
        <item name="colorAccent">@color/colororange</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colororange</item>
    </style>
</resources>